
@{
    Layout = "~/Views/Shared/_ModeratorLayout.cshtml";
}

<div id="DivContent">
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="block">
                        <div class="title"><strong>Add Country</strong></div>
                        <div class="block-body">
                            <form class="form-inline" action="/Country/Validate">
                                <div class="form-group">
                                    <label class="sr-only">Name</label>
                                    <input type="text" class="form-control" id="Name" placeholder="Name" value="@ViewBag.Country.Name" required name="country.Name" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 block">
                    <div class="title"><strong>Countries</strong></div>
                    <div class="block-body">
                        <div class="table-responsive">
                            <table id="datatable1" style="width: 100%;" class="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach  (var c in ViewBag.Countries)
                                    {
                                        <tr>
                                        <td class="text-center"><a>@c.Id</a></td>
                                        <td class="text-center"><a>@c.Name</a></td>
                                        <td class="text-center"><a href="@Url.Action("Edit", "Country", new { id = c.Id})" class="btn sm btn-info ladda-button">Edit</a> <a href="@Url.Action("Remove", "Country", new { id = c.Id})" class="btn sm btn-primary ladda-button">Remove</a></td>
                                    </tr>
                                    }                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </section>
</div>