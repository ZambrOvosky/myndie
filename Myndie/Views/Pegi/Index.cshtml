
@{
    Layout = "~/Views/Shared/_ModeratorLayout.cshtml";
}

<div id="DivContent">
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="block">
                        <div class="title"><strong>Add Pegi</strong></div>
                        <div class="block-body">
                            <form class="needs-validation form-inline" method="post" action="/Pegi/Validate">
                                <div class="form-group">
                                    <label for="inlineFormInput" class="sr-only">Age</label>
                                    <input type="number" class="form-control" id="Age" value="@ViewBag.Pegi.Age" placeholder="Age" required name="pegi.Age" />
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inlineFormInputGroup" class="sr-only">Description</label>
                                    <input type="text" class="form-control" id="Desc" value="@ViewBag.Pegi.Desc" placeholder="Desc" required name="pegi.Desc" />
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inlineFormInputGroup" class="sr-only">Path</label>
                                    <input type="text" class="form-control" id="PhotoPath" value="@ViewBag.Pegi.PhotoPath" placeholder="Path" required name="pegi.PhotoPath" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 block">
                    <div class="title"><strong>Pegis</strong></div>
                    <div class="block-body">
                        <div class="table-responsive">
                            <table id="datatable1" style="width: 100%;" class="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">#</th>
                                        <th class="text-center">Age</th>
                                        <th class="text-center">Descripition</th>
                                        <th class="text-center">Path</th>
                                        <th class="text-center">Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var p in ViewBag.Pegis)
                                    {
                                    <tr>
                                        <td class="text-center"><a>@p.Id</a></td>
                                        <td class="text-center"><a>@p.Age</a></td>
                                        <td class="text-center">@p.Desc</td>
                                        <td class="text-center">@p.PhotoPath</td>
                                        <td class="text-center"><a href="@Url.Action("Edit", "Pegi", new { id = p.Id})" class="btn sm btn-info ladda-button">Edit</a> <a href="@Url.Action("Remove", "Pegi", new { id = p.Id})" class="btn sm btn-primary ladda-button">Remove</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </section>
</div>