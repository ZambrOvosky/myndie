
@{
    Layout = "~/Views/Shared/_ModeratorLayout.cshtml";
}
<div id="DivContent">
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="block">
                        <div class="title"><strong>Add Type</strong></div>
                        <div class="block-body">
                            <form class="form-inline" method="post" action="/TypeApp/Validate">
                                <div class="form-group">
                                    <label for="inlineFormInput" class="sr-only">Name</label>
                                    <input type="text" class="form-control" id="Name" placeholder="Name" value="@ViewBag.Type.Name" required name="typeapp.Name" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Add" class="btn btn-primary">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 block">
                    <div class="title"><strong>Types</strong></div>
                    <div class="block-body">
                        <div class="table-responsive">
                            <table id="datatable1" style="width: 100%;" class="table">
                                <thead>
                                    <tr>
                                        <th class="text-center">Id</th>
                                        <th class="text-center">Name</th>
                                        <th class="text-center">Actions</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var t in ViewBag.Types)
                                    {
                                    <tr>
                                        <td class="text-center"><a>@t.Id</a></td>
                                        <td class="text-center"><a>@t.Name</a></td>
                                        <td class="text-center"><a href="@Url.Action("Edit", "TypeApp", new { id = t.Id})" class="btn sm btn-info ladda-button">Edit</a> <a href="@Url.Action("Remove", "TypeApp", new { id = t.Id})" class="btn sm btn-primary ladda-button">Remove</a></td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>


        </div>
    </section>
</div>


