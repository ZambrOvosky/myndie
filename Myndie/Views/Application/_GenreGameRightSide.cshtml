<!-- Right Side -->
<div class="col-md-3">
    <!-- Side Categories -->
    <div class="side-block">
        <h4 class="block-title">Categories</h4>
        <ul class="block-content">
            <li>
                <a href="~/Application/SearchAllGenres">All</a>
            </li>
            @foreach (var g in ViewBag.GenreSide)
            {
            <li>
                <a href="~/Application/SearchByGenre/@g.Id">@g.Name</a>
            </li>

            }
        </ul>
    </div>
    <!-- /Side Categories -->
    <!-- Side Popular News -->
    <div class="side-block">
        <h4 class="block-title">Popular Games</h4>
        <div class="block-content p-0">
            <!-- Single News Block -->
            @foreach(var a in ViewBag.AppsSide)
            {
            <div class="row myndie-side-news">
                <div class="col-xs-3 col-md-4">
                    <a href="~/Application/Product/@a.Id" class="angled-img">
                        <div class="img">
                            <img src="@a.ImageUrl" style="width: 71px; height: 50px" alt="">
                        </div>
                    </a>
                </div>
                <div class="col-xs-9 col-md-8">
                    <h4 class="ellipsis"><a href="~/Application/Product/@a.Id" title="@a.Name">@a.Name</a></h4>
                    <span class="price">US$ @a.Price</span>
                </div>
            </div>

            }
            <!-- /Single News Block -->
        </div>
    </div>
    <!-- /Side Popular News -->


</div>
<!-- /Right Side -->
