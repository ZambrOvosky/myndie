
@{
}

<!-- Main Content -->
<section class="content-wrap">
    <!-- Banner -->
    <div class="myndie-banner myndie-banner-parallax banner-top xsmall">
        <div class="image" style="background-image: url('../../assets/images/banner-blog-bg.jpg')">
        </div>

        <div class="info">
            <div>
                <div class="container">
                    <h1>Change Password</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- /Banner -->

    <div class="container myndie-store">

        <!-- Games List -->
        <div class="col-md-9 justify-content-center">


            <form method="post" onsubmit="ChangePasswordFP(this)">
                <p>Your Email:</p>
                <input type="email" class="form-control" id="Email" placeholder="Email" required name="Email" />
                <p>New Password:</p>
                <input type="password" class="form-control" id="Password" placeholder="New Password" required name="Password" />
                <p>Confirm Password:</p>
                <input type="password" class="form-control" id="ConfirmPassword" placeholder="Confirm Password" required name="ConfirmPassword" />
                <br />

                <center><button type="submit" class="btn btn-danger justify-content-center">Send Email</button></center>
            </form>
        </div>
        <!-- /Games List -->
        @Html.Action("_GenreGameRightSide", "Application")
    </div>

</section>
<!-- /Main Content -->


<script>
    var password = document.getElementById("Password")
        , confirm_password = document.getElementById("ConfirmPassword");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Password does not match!!");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>

<script>

    function ChangePasswordFP(formData) {
        var ajaxConfig = {
            type: "post",
            url: "/User/ChangePassFP",
            data: new FormData(formData),
            processData: false,
            contentType: false,
            success: function (result) {
                alert(result);
            }
        }
        $.ajax(ajaxConfig);
        return false;
    };
</script>
